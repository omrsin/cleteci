<% provide(:title, 'Administrador') %>

<div class="container admin">

	<div class="span4">
		<h1>
			<%= @contact.name %> <%= @contact.lastname %>
		</h1>
		<p><strong>Correo:</strong> <%= @contact.email %></p>
		<p><strong>SkypeID:</strong> <%= @contact.skypeid %></p>
		<p><strong>Teléfono:</strong> <%= @contact.phone %></p>
		<% if @contact.wish_info %>
			<p>Desea recibir información</p>
		<% else %>
			<p>No desea recibir información</p>
		<% end %>
	</div>
	
	<div class="span8">
		<h1 class="span8">Citas</h1>
		<ul>
			<% @contact.appointments.each do |appointment| %>
				<li class="row">
					<div class="span4">
						<%= appointment.topic %>
					</div>
					<div class="span1">
						<%= appointment.date %>
					</div>
					<div class="span2">	
						<%= appointment.time %>
					</div>
					<div class="span1">
						<%= appointment.via.capitalize %>
					</div>					
				</li>
				<div class="clear-content"></div>
			<% end %>
		</ul>
	</div>
</div>

