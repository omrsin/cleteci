<%= form_for @appointment, url: create_contact_path do |f| %>				
	<% @appointment.errors.delete(:contact_id) %>

	<%= render 'shared/error_messages', object: f.object %>
	
	<div class="span3">
		<%= fields_for :contact, @appointment.contact do |contact_f| %>
			<%= contact_f.label :name, "Nombre" %>
			<%= contact_f.text_field :name %>

			<%= contact_f.label :lastname, "Apellido" %>
			<%= contact_f.text_field :lastname %>

			<%= contact_f.label :email, "Correo" %>
			<%= contact_f.text_field :email %>

			<%= contact_f.label :skypeid, "SkypeID" %>
			<%= contact_f.text_field :skypeid %>

			<%= contact_f.label :phone, "Teléfono" %>
			<%= contact_f.text_field :phone %>

			<%= contact_f.label :wish_info, "¿Desea recibir información?", class: "floating-left-label" %>
			<%= contact_f.check_box :wish_info, checked: true  %>
		<% end %>
	</div>
	<div class="span1">
		<div class="postit" id="arrange"></div>
	</div> 
	<div class="span6">
		<div class="offset1">
			<%= f.label :topic, "Tópico" %>
			<%= f.text_field :topic %> 

			<%= f.label :date, "Fecha" %>
			<%= f.date_select :date %>

			<%= f.label :time, "Hora" %>
			<%= f.select :time, options_for_select([["Entre 8 AM y 12 PM"], 
																							["Entre 12 PM y 2 PM"],
																							["Entre 2 PM y 6PM"],
																							["Después de las 6PM"]]) %>

			<div style="width: 100%;">
				<%= f.label :via, "Por medio de:", class: "floating-left-label" %>
				<%= f.radio_button :via, "Correo", checked: true %>  Correo
				<%= f.radio_button :via, "Skype" %>  Skype
				<%= f.radio_button :via, "Teléfono" %>  Teléfono
			</div>

			<%= f.submit "Enviar", class: "btn btn-large btn-primary submit-appointment" %>				
		</div>
	</div>
<% end %>
<div class="span2 footer-contact">
	<div class="contact-content phone">
		<div class="child-left">
			<%= image_tag("cleteci-phone.png", alt: "Contacto") %>
		</div>			
		<div class="child-right">
			<p>00-000-0000000</p>
			<p>00-000-0000000</p>
			<p>00-000-0000000</p>
		</div>
	</div>
	<div class="clear-content mail">
		<div class="child-left">
			<%= image_tag("cleteci-mail.png", alt: "Correo") %>
		</div>			
		<div class="child-right">
			<p>info@cleteci.com</p>
		</div>
	</div>
	<div class="clear-content mail">
		<div class="child-left">
			<%= image_tag("cleteci-skype.png", alt: "Skype") %>
		</div>			
		<div class="child-right">
			<p>cleteci</p>
		</div>
	</div>
</div>
