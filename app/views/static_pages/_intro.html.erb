<section id="intro">
	<%= render 'static_pages/carousel' %>
	<div class="content-preview">
		<section class="container">
			<div class="offset1">
				<article class="span5">
					<header>
						<h1><%= t ".title" %></h1>
					</header>
					<div class="article-content">
						<ul>
							<li><%= t ".bullet1_html" %></li>
							<li><%= t ".bullet2" %></li>
							<li><%= t ".bullet3" %></li>
							<li><%= t ".bullet4" %></li>
							<li><%= t ".bullet5" %></li>
							<li><%= t ".bullet6" %></li>
							<li><%= t ".bullet7" %></li>
						</ul>
					</div>				
				</article>
			
				<%= link_to("#") do %>
					<article class="span3 content-portfolio">
						<div>
							<header>
								<h1><%= t ".postit1" %></h1>
							</header>
							<%= image_tag('cleteci-folders.png') %>
						<div>
					</article>
				<% end %>
				
				<%= link_to("#nosotros", onclick: 'goTo("company")') do %>
					<article class="span3 content-company">					
						<div>
							<header>
								<h1><%= t ".postit2" %></h1>
							</header>
							<%= image_tag('cleteci-people.png') %>
						</div>
					</article>
				<% end %>
			</div>
		</section>
	</div>
</section>
